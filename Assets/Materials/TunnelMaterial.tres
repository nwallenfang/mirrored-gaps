uniform float scroll_speed = 5.0;  // m/s
uniform float tunnel_length = 527.19;
uniform vec2 scroll_direction = vec2(0.0, 1.0);
uniform bool scrolling_enabled = true;
uniform float distance = 0.0;

uniform float scanline_period = 5.5;
uniform float scanline_width : hint_range(0, 0.49) = 0.1;
uniform float scanline_intensity = 0.35;


vec2 grid(vec2 uv, float columns, float rows){
	return fract(vec2(uv.x * columns, uv.y * rows));
}

void vertex() {
	UV=UV*uv1_scale.xy+uv1_offset.xy;
}

void fragment() {
	//vec2 movement = float(scrolling_enabled) * TIME * scroll_speed*uv1_scale.y/2.0/tunnel_length * scroll_direction;
	vec2 movement = float(scrolling_enabled) * distance *uv1_scale.y/2.0/tunnel_length * scroll_direction;
	vec4 albedo_tex = texture(texture_albedo, UV + movement);
	ALBEDO = albedo.rgb * albedo_tex.rgb;

	vec2 grid_uv = grid(UV, 1, 18);
	
	float uv_offset = mod(-TIME * scanline_period, 2.0) - 1.0;
	float scanline = smoothstep(0.5 - scanline_width, 0.5, grid_uv.y + uv_offset) 
			* (1.0 - smoothstep(0.5, 0.5 + scanline_width, grid_uv.y + uv_offset)) * 1.0;//* pattern.r;
	
	
//	ALBEDO = vec3(grid_uv.x, grid_uv.y, 0.0);
}
